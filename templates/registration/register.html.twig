<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <!-- Slogan centralisÃ© -->
                <a class="navbar-brand mx-auto" href="#">Folhetim</a>
            </div>
            <hr>
        </nav>
</header>
<main>
    <div class="container">
        <div class="form_area">
            <p class="title">SIGN UP</p>
            {{ form_errors(registrationForm) }} 
            <form action="">
                <div class="form_group">
                    {{ form_label(registrationForm.nom, 'Last Name', {'label_attr': {'class': 'sub_title'}}) }}
                    {{ form_widget(registrationForm.nom, {'attr': {'class': 'form_style', 'placeholder': 'Enter your last name'}}) }}
                </div>
                <div class="form_group">
                    {{ form_label(registrationForm.prenom, 'First Name', {'label_attr': {'class': 'sub_title'}}) }}
                    {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form_style', 'placeholder': 'First Name'}}) }}
                </div>
                <div class="form_group">
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'sub_title'}}) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form_style','id':"email", 'placeholder': 'Enter your email'}}) }}
                </div>

                <div class="form_group">
                    {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'sub_title'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form_style', 'placeholder': 'Enter your password','label': 'Password', 'id':"password"}}) }}
                </div>
                <div>
                    <button type= "submit "class="btn">SIGN UP</button>
                    <p>Have an Account? <a class="link" href="{{path ('app_login')}}">Login Here!</a></p><a class="link" href=""></a>
                </div>
                <a class="link" href=""></a>
            </form>
            {{ form_end(registrationForm) }}
        </div>
        <a class="link" href=""></a>
    </div>
</main>
{% endblock %}
